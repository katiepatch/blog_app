<div id="home" class="container">

  <h1 id="greeting">Welcome!</h1>

  <% if user_signed_in? %>

    <div class="col-md-4">
      <button type="button" id="main-btn" class="btn btn-default btn-lg">
        <a href="/blogs"><i class="fa fa-arrow-right"> My Blogs</i></a>
      </button>
    </div>
    <div class="col-md-4">
      <button type="button" id="main-btn" class="btn btn-default btn-lg">
        <a href="/blogs/new"><i class="fa fa-plus"> New Blog</i></a>
      </button>
    </div>
    <div class="col-md-4">
      <button type="button" id="main-btn"class="btn btn-default btn-lg">
        <a href="/blogs"><i class="fa fa-eye"> Explore</i></a>
      </button>
    </div>
  <% else %>
    <button type="button" id="main-btn" class="btn btn-default btn-lg">
      <%= render 'devise/menu/login_items' %>
    </button>
    <button type="button" id="main-btn" class="btn btn-default btn-lg">
      <a href="/blogs"><i class="fa fa-eye"> Explore</i></a>
    </button>
  <% end %>

</div>