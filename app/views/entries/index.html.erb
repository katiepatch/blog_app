<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h1>Entries</h1>

  <div class="container-fluid row layout">

    <div class="col-md-8 container-fluid entries">
      <% @entries.each do |entry| %>
        <div class="entry container-fluid">
          <h2><%= entry.title %></h2>
          <p><%= entry.text %></p>
          <img src="<%= entry.image %>"></img>
          <img src="<%= entry.video %>"></img>
        </div>
          <p>
            <%= link_to 'Show', entry %> |
            <%= link_to 'Edit', edit_entry_path(entry) %> |
            <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %> |
            <a href="comments/new/">Comment</a>
          </p>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="search">
        <form class="navbar-form" role="search">
          <div class="form-group in-line">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="submit btn btn-default">Submit</button>
        </form>
      </div>
      <div class="new">
        <button type="button" id="sm-btn" class="btn btn-default btn-lg navbar-left">
          <p><i class="fa fa-plus"> <%= link_to 'New Entry', new_entry_path %></i></p>
        </button>
      </div>
    </div>

  </div>
</div>
<br>

<p><%= link_to 'New Entry', new_entry_path %></p>
<p><%= will_paginate @entries %></p>

